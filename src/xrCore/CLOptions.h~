#pragma once

#if !defined(_CPPUNWIND)
#error Please enable exceptions...
#endif

#include <exception>

#include "xrCommon/xr_list.h"
#include "xrstring.h"
#include "_std_extensions.h"

class CLOptionBase {

public:
	CLOptionBase(string32 *opname, bool req);

private:
	string32 option_name;
	bool required;
	bool provided = false;
};


template<typename T>
class CLOption : CLOptionBase {
	
	struct ArgMissingException : public exception {
		const char * what() const throw() {
			return "Missing Argument";
		}
	}

	struct ArgParamException : public exception {
		const char * what() const throw() {
			return "Missing Argument Parameter";
		}
	}
	
public:
	CLOption(string32 *flag_name, T &defval);
	CLOption(string32 *flag_name, bool req);
	void CheckArguments();

private:
	static ParseCommandLine(int argc, char *argv[]);
	static xr_list<OptionBase *> options;
	T argument;
};
n
